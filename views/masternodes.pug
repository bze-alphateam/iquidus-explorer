extends layout

block content
	script.
		$(document).ready(function(){
			var mtable = $('#masternodes-table').dataTable( {
				autoWidth: true,
				searching: false,
				ordering: true,
				responsive: true,
				lengthChange: true,
				processing: true,
				stateSave: true,
				ajax: {
					url: '/ext/masternodes',
					dataSrc: function ( json ) {
						return json.data;
					}
				},
				columnDefs: [
					{
						"targets": 2,
						"data": 'country',
						"render": function ( data, type, row )
						{
							if (row.country_code == '') return data;
							return '<span class="flag-icon flag-icon-' + row.country_code + '"></span> ' + data;
						}
					}
				],
				columns: [
					{ data: 'rank', width: '10%' },
					{ data: 'addr', width: '20%' },
					{ data: 'country', width: '15%'},
					{ data: 'status', width: '15%' },
					{ data: 'lastseen', width: '15%' },
					{ data: 'lastpaid', width: '15%' },
				]
			});
			$.ajax({
				url: "/ext/masternodes",
				method: 'post',
				dataType: 'json',
				success: function (mns) {
					var mapData = {};
					for (var i = 0; i < mns.data.length; i++) {
						mapData[mns.data[i].country_code.toUpperCase()] = 1.0 + (mapData[mns.data[i].country_code.toUpperCase()] || 0.0);
					}
					$('#worldmap').vectorMap({
						map: 'world_mill',
						backgroundColor: '#DDDDDD',
						series: {
							regions: [{
								values: mapData,
								scale: ['#C8EEFF', '#0071A4'],
								attribute: 'fill',
								normalizeFunction: 'polynomial'
							}]
						},
						onRegionTipShow: function (e, el, code) {
							el.html(el.html() + ' <b>' + (mapData[code] ? mapData[code] : '0') + '</b>');
						}
					});
				}
			});
		});
	#worldmap(style="width: 55%; height: 300px; margin-left: 22%; margin-bottom: 15%")
	.col-md-12(style="margin-bottom: 4%")
		.row.text-center(style='margin-bottom:15px;')
			i #{settings.locale.mn_info}
		.panel.panel-default
			.panel-heading
				strong #{settings.locale.menu_masternodes}
			table#masternodes-table.table.table-bordered.table-striped
				thead
					tr
						th.text-center #{settings.locale.mn_rank}
						th.text-center #{settings.locale.mn_addr}
						th.text-center #{settings.locale.mn_country}
						th.text-center #{settings.locale.mn_status}
						th.text-center #{settings.locale.mn_lastseen}
						th.text-center #{settings.locale.mn_lastpaid}
				tbody.text-center
